{
	"name": "comment-formatter",
	"displayName": "Comment Formatter",
	"description": "Add format to comments",
	"publisher": "KremboLabs",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "commentFormatter.bold",
				"title": "Bold Selection"
			},
			{
				"command": "commentFormatter.italic",
				"title": "Italic Selection"
			},
			{
				"command": "commentFormatter.outline",
				"title": "Outline Selection"
			},
			{
				"command": "commentFormatter.underline",
				"title": "Underline Selection"
			},
			{
				"command": "commentFormatter.superscript",
				"title": "Super-Script Selection"
			}
		],
		"keybindings": [
			{
				"command": "commentFormatter.bold",
				"key": "alt+b",
				"when": "editorTextFocus"
			},
			{
				"command": "commentFormatter.italic",
				"key": "alt+i",
				"when": "editorTextFocus"
			},
			{
				"command": "commentFormatter.underline",
				"key": "alt+u",
				"when": "editorTextFocus"
			},
			{
				"command": "commentFormatter.outline",
				"key": "alt+o",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
		],
		"keybindings": [
			{
				"command": "commentStyler.bold",
				"key": "alt+d",
				"when": "editorTextFocus "
			},
			{
				"command": "commentStyler.italic",
				"key": "alt+i",
				"when": "editorTextFocus"
			},
			{
				"command": "commentStyler.underline",
				"key": "alt+u",
				"when": "editorTextFocus && editorHasSelection"
			},
			{
				"command": "commentStyler.outline",
				"key": "alt+o",
				"when": "editorTextFocus && editorHasSelection"
			},
			{
				"command": "commentStyler.bullet",
				"key": "alt+x",
				"when": "editorTextFocus"
			}
		],
		"submenus": [
			{
				"id": "commentStyler.editor.context",
				"label": "Format Selection"
			},
			{
				"id": "commentStyler.menu.colors",
				"label": "Colors",
				"icon": "$(symbol-color)"
			},
			{
				"id": "commentStyler.menu.size",
				"label": "Font size",
				"icon": "$(text-size)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "commentStyler.openDrawer",
					"group": "navigation@1",
					"when": "!commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.closeDrawer",
					"group": "navigation@1",
					"when": "commentStyler.drawerOpen"
				},
				{
					"submenu": "commentStyler.menu.size",
					"group": "navigation@2",
					"when": "commentStyler.drawerOpen"
				},
				{
					"submenu": "commentStyler.menu.colors",
					"group": "navigation@3",
					"when": "commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.bold",
					"group": "navigation@4",
					"when": "!commentStyler.boldON&&commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.boldOff",
					"group": "navigation@4",
					"when": "commentStyler.boldON&&commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.italic",
					"group": "navigation@5",
					"when": "!commentStyler.italicON&&commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.italicOff",
					"group": "navigation@5",
					"when": "commentStyler.italicON&&commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.underline",
					"group": "navigation@6",
					"when": "commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.outline",
					"group": "navigation@7",
					"when": "!commentStyler.outlineON&&commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.outlineOff",
					"group": "navigation@7",
					"when": "commentStyler.outlineON&&commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.superscript",
					"group": "navigation@8",
					"when": "!commentStyler.superscriptON&&commentStyler.drawerOpen"
				},
				{
					"command": "commentStyler.superscriptOff",
					"group": "navigation@8",
					"when": "commentStyler.superscriptON&&commentStyler.drawerOpen"
				}
			],
			"commandPalette": [
				{
					"command": "commentStyler.bulletTriangle"
				}
			],
			"editor/context": [
				{
					"submenu": "commentStyler.editor.context",
					"group": "Comment Styler"
				}
			],
			"commentStyler.menu.colors": [
				{
					"command": "commentStyler.colorRed",
					"group": "navigation@1"
				},
				{
					"command": "commentStyler.colorBlue",
					"group": "navigation@2"
				},
				{
					"command": "commentStyler.colorGreen",
					"group": "navigation@3"
				},
				{
					"command": "commentStyler.colorYellow",
					"group": "navigation@4"
				},
				{
					"command": "commentStyler.colorOrange",
					"group": "navigation@5"
				},
				{
					"command": "commentStyler.colorPurple",
					"group": "navigation@6"
				},
				{
					"command": "commentStyler.colorCyan",
					"group": "navigation@7"
				},
				{
					"command": "commentStyler.colorDefault",
					"group": "navigation@8"
				}
			],
			"commentStyler.menu.size": [
				{
					"command": "commentStyler.size200",
					"group": "navigation@1"
				},
				{
					"command": "commentStyler.size150",
					"group": "navigation@2"
				},
				{
					"command": "commentStyler.size125",
					"group": "navigation@3"
				},
				{
					"command": "commentStyler.size100",
					"group": "navigation@4"
				},
				{
					"command": "commentStyler.size75",
					"group": "navigation@5"
				},
				{
					"command": "commentStyler.size50",
					"group": "navigation@6"
				}
			],
			"commentStyler.editor.context": [
				{
					"command": "commentStyler.bold",
					"group": "commentStyler",
					"when": "editorTextFocus && editorHasSelection "
				},
				{
					"command": "commentStyler.italic",
					"group": "commentStyler@1",
					"when": "editorTextFocus && editorHasSelection  "
				},
				{
					"command": "commentStyler.outline",
					"group": "commentStyler@1",
					"when": "editorTextFocus&& editorHasSelection "
				},
				{
					"command": "commentStyler.underline",
					"group": "commentStyler@1",
					"when": "editorTextFocus&& editorHasSelection "
				},
				{
					"command": "commentStyler.superscript",
					"group": "commentStyler@1",
					"when": "editorTextFocus&& editorHasSelection "
				},
				{
					"command": "commentStyler.dummy",
					"group": "commentStyler@1",
					"when": "editorTextFocus && !editorHasSelection"
				},
				{
					"command": "commentStyler.bullet",
					"group": "bullets",
					"when": "editorTextFocus"
				},
				{
					"command": "commentStyler.bulletTriangle",
					"group": "bullets",
					"when": "editorTextFocus"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Comment Styler",
			"properties": {
				"commentStyler.useDrawer": {
					"type": "boolean",
					"description": "Hide style options until drawer button is clicked",
					"default": true
				},
				"commentStyler.serifFont": {
					"type": "boolean",
					"description": "Should Bold and Italics use serif font (letters with small extra stroke)",
					"default": false
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/krembolabs/comment-styler.git"
	}
